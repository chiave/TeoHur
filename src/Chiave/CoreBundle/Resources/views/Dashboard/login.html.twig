<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>{% block title %}Panel administratora{% endblock %} - Teofil</title>
    <!--title>{% block description %}strona główna{% endblock %}</title-->

     {#<link rel="stylesheet" href="{{ asset('css/back.css') }}" type="text/css" />
     <link rel="stylesheet" href="{{ asset('css/reset.css') }}" type="text/css" />#}


    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/chiavecore/css/foundation.min.css') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/chiavecore/css/backend.css') }}" />

    {% block stylesheets %}{% endblock %}


    <script src="//code.jquery.com/jquery-1.10.2.min.js"></script>
    <script src="{{ asset('bundles/chiavecore/js/modernizr.js') }}"></script>
    <script src="{{ asset('bundles/chiavecore/js/vendor/fastclick.js') }}"></script>
</head>

<body>
    <nav class="top-bar" data-topbar>
        <ul class="title-area">
            <li class="name">
                <h1><a href="#">Hurtownia Teofil</a></h1>
            </li>
        </ul>
    </nav>

    <section role="main">
        <div class="row header-intro">
            <header>
                <h1>Panel Administratora</h1>
                <h4>Zaloguj się</h4>
            </header>
        </div>

        {% set active = block('active_name') %}
        <div class="row">
            <div class="medium-4 columns login">

                {% if error %}
                    <div>{{ error.message }}</div>
                {% endif %}

                <form action="{{ path('login_check') }}" method="post">
                    <label for="username">{{ 'Username' | trans }}</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" />

                    <label for="password">{{ 'Password' | trans }}</label>
                    <input type="password" id="password" name="_password" />

                    <button type="submit">login</button>
                </form>
            </div>
        </div>
    </section>

    <script src="{{ asset('bundles/chiavecore/js/foundation.min.js') }}"></script>
    <script type="text/javascript">
        $(document).foundation();
    </script>
</body>
</html>
