<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
        	 <link rel="stylesheet" href="{{ asset('css/style.css') }}" type="text/css" />
        	  <link rel="stylesheet" href="{{ asset('css/reset.css') }}" type="text/css" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link href='http://fonts.googleapis.com/css?family=Titillium+Web&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
        <script src="{{ asset('js/jquery-1.11.0.min.js') }}"></script>
    </head>
    <body>
    	<div id="page">
    		<div id="header">
    		</div><!-- end div header -->
    		
    		<div class="leftSide">
    			<div class="verticalMenu">
    				<ul>
    					<li><a href="">Strona główna</a></li>
    					<li><a href="">O firmie</a></li>
    					<li><a href="">Produkty</a></li>
    					<li><a href="">Cennik</a></li>
    					<li><a href="">Zamówienia</a></li>
    					<li><a href="">Dojazd</a></li>
    					<li><a href="">Kontakt</a></li>
    				</ul>
    			</div>
    		</div>
    	
       		 {% block body %}{% endblock %}
       		 
       		 <div id="footer">
       		 </div>
        </div> <!-- end div page -->
        
        {% block javascripts %}
        <script>
        	$(document).ready(function(){
            	$('.verticalMenu li').hover(function(){
                	$(this).animate({paddingLeft: '+=10px'}, 200);
                	}, function() {
                    	$(this).animate({paddingLeft: '-=10px'}, 50);
                	});  
            });
        </script>
        {% endblock %}
        
    </body>
</html>
